<h1 class="mb-4"> <%= @user.name %> </h1>

<div class="row">
  <div class="col-md mb-4">
    <p class="text-muted"> <%= pluralize(@user.created_events.count, 'event').upcase %> CREATED</p>
    <div class="list-group mt-3">
        <% @user.created_events.each do |event| %>
          <%= link_to event.title, event_path(event), class: "list-group-item list-group-item-action" %>
        <% end %>
    </div>
  </div>
  <div class="col-md mb-4">
    <p class="text-muted"> <%= pluralize(@user.attended_events.count, 'event').upcase %> ATTENDED</p>
    <div class="list-group mt-3">
        <% @user.attended_events.each do |event| %>
          <%= link_to event.title, event_path(event), class: "list-group-item list-group-item-action" %>
        <% end %>
    </div>
  </div>
</div>
